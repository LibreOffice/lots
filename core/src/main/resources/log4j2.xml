<Configuration status="info" name="WollMux" packages="">
  <Appenders>
    <File name="wollmuxLog" fileName="${sys:user.home}/.wollmux/wollmux.log">
      <PatternLayout>
        <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c:%L - %m%n</Pattern>
      </PatternLayout>
    </File>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="wollmuxLog" />
    </Root>
  </Loggers>
</Configuration>
